<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    商品价格人民币标识的样式-->
    <style name="GoodsPriceIdentifyTextStyle">
        <item name="android:textColor">@color/colortheme</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">¥</item>
    </style>
    <!--    商品价格数值的样式-->
    <style name="GoodsPriceNumberTextStyle">
        <item name="android:textColor">@color/colortheme</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 评分控件样式-->
    <style name="RatingStyle" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/appraise_rating_bar</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        //这里放一些你觉得公共的属性(你可以在控件里覆盖这里的属性)
    </style>

    <!--    文本条目左边文本样式-->
    <style name="CommonItemLeftTextStyle">
        <item name="android:textColor">@color/global_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--    文本条目左边文本样式-->
    <style name="CommonInputTextStyle">
        <item name="android:textColor">@color/global_text_color</item>
        <item name="android:textColorHint">@color/global_hint_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--    文本条目左边文本样式-->
    <style name="CommonCommitBtnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_summit_style</item>
    </style>

    <style name="CommonItemPaddingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/common_padding_left</item>
        <item name="android:paddingRight">@dimen/common_padding_left</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--    搜搜控件的通用样式-->
    <style name="SearchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/common_padding_left</item>
        <item name="android:paddingRight">@dimen/common_padding_left</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/bg_search_view</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/global_hint_text_color</item>
        <item name="android:textColor">@color/global_text_color</item>
    </style>

    <!--    商品名称通用样式-->
    <style name="GoodsNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textColor">@color/global_text_color</item>
    </style>

</resources>
