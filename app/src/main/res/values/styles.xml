<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ContentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ContentText.FixedSmall">
        <item name="android:textSize">@dimen/font_small_fixed</item>
    </style>

    <style name="ContentText.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ContentText.Normal">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="ContentText.Large">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="AppBarText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_bar_text</item>
    </style>

    <style name="AppBarText.Huge">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="AppBarText.Normal">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="HorizontalItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_54</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/ContentText.Large</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:background">@mipmap/splash</item>-->
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--普通dialog-->
    <style name="CommonBackIVStyle">
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/common_padding_left</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
