<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomProgressBar">
        <attr name="loading_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="SimpleNumberPicker">
        <attr name="min_number" format="integer"/>
    </declare-styleable>

    <!--控制TextView的Drawable属性的大小-->
    <declare-styleable name="DrawableTextView">
        <attr name="drawableWidth" format="dimension|reference" />
        <attr name="drawableHeight" format="dimension|reference" />
    </declare-styleable>

    <!--商品详情中推荐的控件-->
    <declare-styleable name="GoodsRecommendListView">
        <attr name="recommendTitle" format="string|reference" />
    </declare-styleable>
    <!--通用标题-->
    <declare-styleable name="CommonTitle">
        <attr name="showBack" format="boolean" />
        <attr name="showDivideLine" format="boolean" />
        <attr name="titleCenter" format="reference|string" />
        <attr name="titleRight" format="reference|string" />
        <attr name="iv_left" format="reference" />
        <attr name="iv_right" format="reference" />
        <attr name="title_bg_color" format="reference|color" />
        <attr name="title_text_color" format="reference|color" />
        <attr name="title_left_text" format="reference|string" />
    </declare-styleable>
</resources>