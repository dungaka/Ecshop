<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/CommonBackIVStyle"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_complain_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/common_padding_left"
            android:src="@drawable/ic_shensu_goods" />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="240dp"
            android:layout_height="@dimen/size_45"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/white" />
    </RelativeLayout>

    <com.langt.zjgx.widget.banner.BannerLayout
        android:id="@+id/layout_goods_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_260"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_padding_left"
        android:paddingRight="@dimen/common_padding_left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv"
                    style="@style/GoodsPriceIdentifyTextStyle" />

                <TextView
                    android:id="@+id/tv_goods_price"
                    style="@style/GoodsPriceNumberTextStyle"
                    android:text="129.0" />

                <TextView
                    android:id="@+id/tv_goods_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ä»¶"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_goods_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    tools:text="125" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_collect"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/ic_collect"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_share"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/ic_share"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_padding_left"
        android:paddingRight="@dimen/common_padding_left"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp" />


</LinearLayout>