<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/common_padding_left"
    android:layout_marginTop="10dp"
    android:layout_marginRight="@dimen/common_padding_left"
    android:background="@drawable/bg_round_color_solid_white_10"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_appeal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/global_text_color"
            android:textSize="15sp"
            tools:text="【虚假消息】" />

        <TextView
            android:id="@+id/tv_appeal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/global_middle_text_color"
            android:textSize="15sp"
            tools:text="商品不一致，商品有误商品不一致，商品有误商品不一致，商品有误" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/global_divide_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_appeal_submit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/global_hint_text_color"
            android:textSize="12sp"
            tools:text="11:56" />

        <TextView
            android:id="@+id/tv_appeal_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/action_detail"
            android:textColor="@color/global_middle_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>