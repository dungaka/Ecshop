<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    
    <com.langt.zjgx.widget.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showBack="true"
        app:titleCenter="设置"/>
    
    
    <TextView
        android:id="@+id/tv_modfiy_avatar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="修改头像和昵称"
        android:textColor="@color/global_text_color"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:drawableRight="@drawable/ic_arrow_gray_right"
        android:background="@color/white"
        />


    <TextView
        android:id="@+id/tv_modfiy_pwd"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="修改登录密码"
        android:layout_marginTop="7dp"
        android:textColor="@color/global_text_color"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:drawableRight="@drawable/ic_arrow_gray_right"
        android:background="@color/white"
        />


    <RelativeLayout
        android:id="@+id/rl_version"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:layout_height="47dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="版本更新"
            android:textColor="@color/global_text_color"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/id_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_gray_right"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:textSize="15sp"
            android:textColor="@color/global_hint_text_color"
            android:layout_toLeftOf="@id/id_iv"
            android:text="已是最新版本"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cache"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:layout_height="47dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="清除缓存"
            android:textColor="@color/global_text_color"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/id_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_gray_right"/>

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:textSize="15sp"
            android:textColor="@color/global_hint_text_color"
            android:layout_toLeftOf="@id/id_iv2"
            android:text="122kb"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_loginout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:layout_marginTop="93dp"
        android:textColor="@color/global_text_color"
        android:background="@color/white"
        android:text="退出登录"/>

</LinearLayout>