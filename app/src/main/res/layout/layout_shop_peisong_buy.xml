<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_shop_buy_layout"
        android:orientation="horizontal"
        android:paddingLeft="80dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv"
                    style="@style/GoodsPriceIdentifyTextStyle"
                    android:textColor="@color/global_text_color" />

                <TextView
                    android:id="@+id/tv_total_price"
                    style="@style/GoodsPriceNumberTextStyle"
                    android:text="129.0"
                    android:textSize="20sp"
                    android:textColor="@color/global_text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="加一元配送到家"
                    android:textColor="@color/global_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支持自取"
                    android:textColor="#f6813a"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_confirm_bug"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_confirm_bug"
            android:gravity="center"
            android:text="一元起送"
            android:textColor="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_car"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:clipChildren="false"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:id="@+id/iv_car"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gwc_empty" />

        <TextView
            android:id="@+id/tv_bug_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_shop_but_count"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:paddingRight="15dp"
            android:paddingBottom="2dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>