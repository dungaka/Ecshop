<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_round_color_solid_white_10"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10">

    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:corner_radius="10dp"
        app:type="round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_goods_name"
            style="@style/GoodsNameStyle"
            android:layout_marginTop="10dp"
            tools:text="意大利进口乐芙娜手指饼干休闲零食" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_goods_event_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_goods_type_qianggou"
                android:visibility="gone" />

            <TextView
                android:id="@+id/id_tv"
                style="@style/GoodsPriceIdentifyTextStyle" />

            <TextView
                android:id="@+id/tv_goods_price"
                style="@style/GoodsPriceNumberTextStyle"
                tools:text="129.0" />

            <TextView
                android:id="@+id/tv_goods_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/global_hint_text_color"
                android:textSize="12sp"
                tools:text="/件" />

            <TextView
                android:id="@+id/tv_price_right_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:lines="1"
                android:textColor="@color/global_hint_text_color"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="2.0km" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_single_buy_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:textColor="@color/global_hint_text_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="单买价：￥19.00" />

        <TextView
            android:id="@+id/tv_goods_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:textColor="@color/global_hint_text_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="￥19.00" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:textColor="@color/global_hint_text_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="距离：2.0km" />


        <TextView
            android:id="@+id/tv_goods_sale_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:textColor="@color/global_hint_text_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="已售：23659" />

        <TextView
            android:id="@+id/tv_favorable_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:textColor="@color/global_hint_text_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="好评率：80%" />

        <LinearLayout
            android:id="@+id/ll_pingji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:text="评级："
                android:textColor="@color/global_hint_text_color"
                android:textSize="12sp" />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/ratingBar"
                style="@style/RatingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:isIndicator="false"
                android:max="5"
                android:progress="3" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>