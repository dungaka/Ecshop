<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            style="@style/CommonBackIVStyle"
            android:text="@string/manjian_title" />

        <EditText
            style="@style/SearchViewStyle"
            android:layout_marginLeft="@dimen/common_padding_left"
            android:layout_marginRight="@dimen/common_padding_left"
            android:drawableRight="@drawable/ic_search_gray"
            android:drawablePadding="10dp"
            android:hint="@string/manjian_search_input_hint"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>