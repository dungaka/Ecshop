<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.langt.zjgx.widget.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showBack="true"
        app:titleCenter="@string/appeal_detail" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_padding_left"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/common_padding_left"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_appeal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/global_text_color"
            android:textSize="13sp"
            tools:text="【虚假消息】" />

        <TextView
            android:id="@+id/tv_appeal_state_un_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/appeal_state_un_deal"
            android:textColor="@color/global_red_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_appeal_state_dealed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/appeal_state_dealed"
            android:textColor="#1739e3"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_appeal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_appeal_state_un_deal"
            android:layout_toRightOf="@id/tv_appeal_type"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/global_middle_text_color"
            android:textSize="13sp"
            tools:text="商品不一致，商品有误商品不一致，商品有误商品不一致，商品有误" />


        <TextView
            android:id="@+id/tv_appeal_submit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_appeal_type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/global_hint_text_color"
            android:textSize="12sp"
            tools:text="11:56" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/appeal_detail_info"
                android:textColor="@color/global_text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_appeal_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/global_middle_text_color"
                android:textSize="13sp"
                tools:text="武汉东湖新技术开发区百草味零食天地经销批发的预包装食品、散装食品畅销消费者市场，在消费者当中享有较高的地位，公司与多家零售商和代理商建立了长期稳定的合作关系。武汉东湖新技术开发区百草味零食天地经销的预包装食品、散装食品品种齐全、价格合理。武汉东湖新技术开发区百草味零食天地实力雄厚，重信用、守合同、保证产品质量，以多品种经营特色和薄利多销的原则，赢得了广大客户的信任。" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>